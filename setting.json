{
  "window.commandCenter": false,
  "workbench.editor.showTabs": "none",
  "workbench.activityBar.location": "hidden",
  "workbench.editor.editorActionsLocation": "hidden",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.tabSize": 2,
  "editor.mouseWheelZoom": true,
  "workbench.sideBar.location": "right",
  "workbench.layoutControl.enabled": false,
  "editor.minimap.enabled": false,
  "editor.semanticHighlighting.enabled": true,
  "workbench.iconTheme": "vscode-icons",
  "workbench.colorTheme": "Moonlight Italic",
  "window.menuBarVisibility": "compact",

  // custom
  "editor.bracketPairColorization.enabled": true,
  "workbench.colorCustomizations": {
    "editorBracketHighlight.foreground1": "#e785c5",
    "editorBracketHighlight.foreground2": "#8eeb7b",
    "editorBracketHighlight.foreground3": "#dfad79"
  },
  "terminal.integrated.fontFamily": "CaskaydiaMono Nerd Font",
  "editor.fontFamily": "JetbrainsMono Nerd Font",
  "editor.fontLigatures": true,
  "security.workspace.trust.untrustedFiles": "open",
  "editor.cursorBlinking": "smooth",
  "editor.cursorWidth": 2,
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.scrollbar.horizontalScrollbarSize": 9,
  "editor.scrollbar.verticalScrollbarSize": 9,
  "editor.codeLensFontFamily": "CaskaydiaMono Nerd Font",
  "editor.experimentalInlineEdit.fontFamily": "CaskaydiaMono Nerd Font",
  "editor.inlayHints.fontFamily": "CaskaydiaMono Nerd Font",
  "editor.inlineSuggest.fontFamily": "CaskaydiaMono Nerd Font",
  "debug.console.fontFamily": "CaskaydiaMono Nerd Font",
  "scm.inputFontFamily": "CaskaydiaMono Nerd Font",
  "notebook.output.fontFamily": "CaskaydiaMono Nerd Font",
  "chat.editor.fontFamily": "CaskaydiaMono Nerd Font",
  "editor.lineHeight": 2,
  "eslint.format.enable": true
}
